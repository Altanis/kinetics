{
    "compilerOptions": {
      "target": "ES6",                                  
      "module": "commonjs",                                
      "declaration": true,                                 
      "declarationMap": true,                              
      "sourceMap": true,                                   
      "outDir": "./dist/",                                 
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                      
      "skipLibCheck": true                                 
    },
    "include": [
      "src/**/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "examples",
      "build"
    ]
}
